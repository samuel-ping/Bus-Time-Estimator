public class App {
	String start;
	String end;
	Bus LX, EE, B, REXL, REXB, H, A, F;
	public App(String s, String e) {
		start = s;
		end = e;
		LX = new Bus(new Stop[] {new Stop("College Avenue Student Center", 5), new Stop("Scott Hall", 2), new Stop("Train Station (by Somerset St)", 3)});
	}

	public String checkBus() {
		if (EE.contains(start, end)) {
			calcTime(EE.route, EE.getIndex(start), EE.getIndex(end));
			numStops(EE.route, EE.getIndex(start), EE.getIndex(end));
			return "EE";
		}
		if (F.contains(start, end)) {
			calcTime(F.route, F.getIndex(start), F.getIndex(end));
			numStops(F.route, F.getIndex(start), F.getIndex(end));
			return "F";
		}
		if (LX.contains(start, end)){
			calcTime(LX.route, LX.getIndex(start), LX.getIndex(end));
			numStops(LX.route, LX.getIndex(start), LX.getIndex(end));
			return "LX";
		}
		if (REXL.contains(start, end)){
			calcTime(REXL.route, REXL.getIndex(start), REXL.getIndex(end));
			numStops(REXL.route, REXL.getIndex(start), REXL.getIndex(end));
			return "REXL";
		}
		if (B.contains(start, end)){
			calcTime(B.route, B.getIndex(start), B.getIndex(end));
			numStops(B.route, B.getIndex(start), B.getIndex(end));
			return "B";
		}
		if (A.contains(start, end)){
			calcTime(A.route, A.getIndex(start), A.getIndex(end));
			numStops(A.route, A.getIndex(start), A.getIndex(end));
			return "A";
		}
		if (H.contains(start, end)){
			calcTime(H.route, H.getIndex(start), H.getIndex(end));
			numStops(H.route, H.getIndex(start), H.getIndex(end));
			return "H";
		}
		if (REXB.contains(start, end)){
			calcTime(REXB.route, REXB.getIndex(start), REXB.getIndex(end));
			numStops(REXB.route, REXB.getIndex(start), REXB.getIndex(end));
			return "REXB";
		}
		return "No buses take you to this place";

	}

	public int calcTime(Stop[] r, int startIndex, int endIndex) {
		int totalTime = 0;
		if (endIndex < startIndex) {
			for (int i = startIndex; i < r.length; i++) {
				totalTime = r[i].getTimeToNextStop() + totalTime;
			}
			for (int j = 0; j < endIndex; j++) {
				totalTime = r[j].getTimeToNextStop() + totalTime;
			}
		} else {
			for (int i = startIndex; i < endIndex; i++) {
				totalTime = r[i].getTimeToNextStop() + totalTime;
			}
		}
		
		return totalTime;
	}
	
	public int numStops(Stop[] r, int startIndex, int endIndex) {
		int totalStops = 0;
		if (endIndex < startIndex) {
			for (int i = startIndex; i < r.length; i++) {
				totalStops++;
			}
			for (int j = 0; j < endIndex; j++) {
				totalStops++;
			}
		} else {
			for (int i = startIndex; i < endIndex; i++) {
				totalStops++;
			}
		}
		
		return totalStops;
	}
	
	public String print() {
		return "Take the " + checkBus() + " bus.\n The journey takes ";
	}
	
	public static void main(String[] args) {
		
	}
}
